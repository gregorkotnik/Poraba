<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:padding="10dp"
    tools:context=".Activities.NewUser">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:text="User name:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etAddNewUser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:layout_weight="1"
        android:text="Gorivo:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/textView12"
        android:layout_toStartOf="@+id/spinnerDistanceUnit"
        android:dropDownWidth="wrap_content"
        android:entries="@array/fuelType"
        android:spinnerMode="dropdown" />

    <!--  Tukaj!-->

    <TextView
        android:id="@+id/textView10"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView11"
        android:layout_marginBottom="196dp"
        android:layout_weight="1"
        android:text="kapaciteta rezervoarja:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/spinnerConsumptionUnit"
        android:layout_weight="1"
        android:text="Enota za razdaljo:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerUnit"
        android:layout_weight="1"
        android:text="Enota za porabo:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp"
        android:layout_toStartOf="@+id/spinnerDistanceUnit"
        android:layout_weight="1"
        android:text="Enota:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />


    <Spinner
        android:id="@+id/spinnerDistanceUnit"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignTop="@+id/textView11"
        android:dropDownWidth="wrap_content"
        android:entries="@array/distanceUnit"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/spinnerConsumptionUnit"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView9"
        android:layout_marginEnd="60dp"
        android:dropDownWidth="wrap_content"
        android:entries="@array/consumptionUnit"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/spinnerUnit"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:dropDownWidth="wrap_content"
        android:entries="@array/unit"
        android:spinnerMode="dropdown" />


    <EditText
        android:id="@+id/etTankCapacity"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="number" />

    <ImageButton
        android:id="@+id/btnAddNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/spinnerDistanceUnit"
        android:padding="10dp"
        app:srcCompat="@drawable/plus" />

</RelativeLayout>