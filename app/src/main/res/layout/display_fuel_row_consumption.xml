<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="300px"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/holo_blue_bright">

    <TextView
        android:id="@+id/tvConsumptionL"
        android:layout_width="94dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="66dp"
        android:text="TextView"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="Consumption" />

    <TextView
        android:id="@+id/tvFuelLoaded"
        android:layout_width="81dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tvConsumptionL"
        android:layout_marginStart="129dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="Fuel loaded" />

    <TextView
        android:id="@+id/tvMilage"
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvConsumptionL"
        android:layout_marginEnd="86dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="Milage" />

    <Button
        android:id="@+id/btnEditConsumption"
        android:layout_width="71dp"
        android:layout_height="100px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="EDIT"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="311dp" />

    <Button
        android:id="@+id/btnDeleteConsumption"
        android:layout_width="72dp"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="38dp"
        android:text="DELETE"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="4dp"
        tools:text="DELETE" />



</RelativeLayout>
