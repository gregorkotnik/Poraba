<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Edit consumption"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    <EditText
        android:id="@+id/etConsuptionL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vnesi porabo"
        />

    <EditText
        android:id="@+id/etMilageUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Milage" />
    <EditText
        android:id="@+id/etPetrolL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vnesi natočeno litrov goriva:"/>

    <Button
        android:id="@+id/btnUpdateConsumption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"/>
</LinearLayout>